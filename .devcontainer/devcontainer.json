{
  "name": "Ubuntu Dev Container",
  "dockerFile": "Dockerfile",
"customizations": {
    "vscode": {
        "settings": {
            "terminal.integrated.shell.linux": "/bin/zsh"
        },
        "extensions": [
            "github.copilot-chat"
        ]
    }
},
  "forwardPorts": [3000, 8080],
  "postCreateCommand": "echo 'Dev container created!'",
  "containerUser": "vscode",
  "remoteUser": "vscode"
}
